    lib bio : : <name>boost_iostreams-1_42 ; #<search>$(BOOST_LIB_PATH:T) ;
    lib bsys : : <name>boost_system-1_42 ; #<search>$(BOOST_LIB_PATH:T) ;
    lib zlib : : <name>z ; #<search>$(BOOST_LIB_PATH:T) ;
}

