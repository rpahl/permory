project site-config ;

import os ;
if ( [ os.name ] = LINUX )
{
    lib bfs : : <name>boost_filesystem ;
    lib bpop : : <name>boost_program_options ;
    lib bio : : <name>boost_iostreams ;
    lib bsys : : <name>boost_system ;
    lib zlib : : <name>z ;
}

